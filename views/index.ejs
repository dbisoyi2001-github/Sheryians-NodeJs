<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

  <nav class="flex justify-between items-center bg-zinc-800 border-b border-zinc-700 text-white px-10 py-6 sticky top-0">
    <div class="logo">
      <a href="/" class="font-bold text-2xl">Posts.</a>
    </div>
    <div class="link">
      <a href="/profile" class="bg-zinc-500 p-2 rounded-full">üôç‚Äç‚ôÇÔ∏è</a>
    </div>
  </nav>
  <div class="w-full min-h-screen bg-zinc-800 text-white p-10">
    <div class="post-contanier mt-4">
          
      <% posts.forEach(function(post) { %>
          <div class="post mt-4 border-2 border-zinc-700 p-2 rounded-md w-1/2">
            <span class="text-blue-500">@ <%= post.author.username %></span>
            <p class="tracking-tight bg-zinc-700 p-2">
              <%= post.content %>
            </p>
            <div>
              
              <span class="mr-4 ml-1 text-sm"><%= post.likes.length %> ‚ô•</span>

              <% if (post.likes.indexOf(user) === -1) { %>
              <a href="/like/<%= post.id %>" class="text-red-500">like</a>
              <% }else{ %>
              <a href="/like/<%= post.id %>" class="text-gray-500">unlike</a>
              <% } %>
            </div>
          </div>
        <% }) %>              
    
  </div>
  </div> 
</body>
</html>