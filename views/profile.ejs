<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <nav class="flex justify-between items-center bg-zinc-800 border-b border-zinc-700 text-white px-10 py-6 sticky top-0">
      <div class="logo">
        <a href="/" class="font-bold text-2xl">Posts.</a>
      </div>
      <div class="link">
        <a href="/profile" class="bg-zinc-500 p-2 rounded-full">üôç‚Äç‚ôÇÔ∏è</a>
      </div>
    </nav>
    
    <div class="w-full min-h-screen bg-zinc-800 text-white p-10">
      <div class="flex items-center justify-between mb-12">
        <div class="flex items-center gap-2">
          <a href="/profile/upload">
            <div class="avatar rounded-md w-10 h-10 overflow-hidden relative">
              <img class="w-full h-full object-cover" src="/images/<%= user.avatar %>" alt="">
              <img src="/images/edit-fill.png" class="w-6 h-6 absolute right-0 bottom-0" alt="">
            </div>
          </a>
          <h4 class="text-2xl">
            <span class="font-light">Hello,</span> <%= user.username %> üëã
          </h4>
        </div>
        
        <a
          href="/logout"
          class="bg-red-500 rounded-md px-2 py-1 text-sm inline-block"
          >Logout</a
        >
      </div>

      <h5 class="mb-2">Create a new post</h5>

      <form action="/createpost" method="post">
        <textarea
          name="content"
          id=""
          placeholder="whats on your mind?"
          class="w-full p-3 outline-none resize-none bg-transparent border-2 border-zinc-700 rounded-md"
        ></textarea>
        <input
          type="submit"
          class="px-3 py-2 bg-blue-500 rounded-md mt-2"
          value="Create new post"
        />
      </form>

      <div class="posts mt-20">
        <h3 class="text-xl text-zinc-500">Your Posts.</h3>
        <div class="post-contanier mt-4">
          
            <% user.posts.reverse().forEach(function(post) { %>
                <div class="post mt-4 border-2 border-zinc-700 p-5 rounded-md w-1/2">
                  <p class="tracking-tight">
                    <%= post.content %>
                  </p>
                  <div class="btns mt-4 flex items-baseline gap-4">
                    <a href="" class="py-1 text-red-500 rounded-md">Delete</a>
                    <a href="" class="py-1 text-gray-500 rounded-md">Edit</a>
                  </div>
                </div>
              <% }) %>              
          
        </div>
      </div>
    </div>
  </body>
</html>
